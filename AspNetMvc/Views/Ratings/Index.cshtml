@model IEnumerable<AspNetMvc.Models.Rating>

@{
    ViewData["Title"] = "Index";
}

<form asp-action="Search">
    <input name="query" placeholder="Enter Name" id="Search" />
    <input type="submit" value="search" onkeydown="SubmitForm()" />
</form>
@{

    if (Model == null)
    {
        <div> No Rating With that Name </div>
    }
    else
    {

        <h1>Average Rating:  @Math.Round(Model.Average(r => r.Rate), 2)</h1>

        <p>
            <a asp-action="Create">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Rate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Feedback)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Rate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Feedback)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.DateTime)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
}
<a asp-action="index"> GoBack To Full List</a>

@section Scripts{
<script src="~/js/Search.js"> </script>
<script src="~/lib/dist/browser/signalr.js"> </script>
<script src="~/js/signalr.js"></script>
    }