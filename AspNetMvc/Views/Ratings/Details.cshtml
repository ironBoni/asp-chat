@model AspNetMvc.Models.Rating

@{
    ViewData["Title"] = "Details";
}
<img class="logo" src="~/css/webIcon.png" />
<h1>Info</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Rate)
        </dt>
        <dd class="col-sm-10">
            @for (int i = 0; i < Model.Rate; i++)
            {
                <span>★</span>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Feedback)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Feedback)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DateTime)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
    </dl>
</div>
<div>
    <button type="button" class="btn btn-primary" onClick="location.href='@Url.Action("Edit", "Ratings")' + '/' + @Model?.ID">Edit</button> |
    <button type="button" class="btn btn-secondary" onClick="location.href='@Url.Action("", "Ratings")'">Cancel</button>

</div>
